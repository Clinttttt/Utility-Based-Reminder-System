<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartMessaging</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/First_MVC_webApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/29.1.38/ej2-base/styles/material.css" />

    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/29.1.38/ej2-buttons/styles/material.css" />

    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/29.1.38/ej2-calendars/styles/material.css" />
    <script src="https://cdn.syncfusion.com/ej2/29.1.38/ej2-base/dist/global/ej2-base.min.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/29.1.38/ej2-calendars/dist/global/ej2-calendars.min.js"></script>

    <script src="https://cdn.syncfusion.com/ej2/29.1.38/ej2-sidebar/dist/global/ej2-sidebar.min.js"></script>

    <link href="https://cdn.syncfusion.com/ej2/syncfusion-essential-js2-base.min.css" rel="stylesheet" />
    <link href="https://cdn.syncfusion.com/ej2/syncfusion-essential-js2-buttons.min.css" rel="stylesheet" />
    <link href="https://cdn.syncfusion.com/ej2/syncfusion-essential-js2-cards.min.css" rel="stylesheet" />
    <link href="https://cdn.syncfusion.com/ej2/syncfusion-essential-js2-notifications.min.css" rel="stylesheet" />
</head>
<body>

    <header>
        <script>
            // Auto-refresh every 5 seconds dre na part
            setInterval(() => {
                fetch('@Url.Action("CheckMessages", "ToDoList")')
                    .then(response => response.text())
                    .then(html => {
                        document.getElementById('chatMessages').innerHTML = html;
                    });
            }, 5000);
        </script>

        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-transparent bg-transparent box-shadow mb-3">
            <div class="container-fluid">
                <div class="justify-content-lg-start">
                    @if (ViewContext.RouteData.Values["Controller"]?.ToString() == "ToDoList" && ViewContext.RouteData.Values["Action"]?.ToString() == "Todolist")
                    {
                        <p class=" text-light fs-4 mx-2">TODO LIST <i class="bi bi-journals"></i></p>
                    }
                </div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-end">
                    <ul class="navbar-nav  ms-auto">
                        <li>
                            <a class="navbar-brand text-light fw-bold fs-2 " asp-area="" asp-controller="Home" asp-action="Index"> <i class="bi bi-journal-bookmark-fill" style="color:rgb(171, 162, 164)"></i><span class="display-6.5" style="color:rgb(168, 159, 161); font-size:29px;">G6</span> </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="ToDoList" asp-action="Todolist">WriteZone</a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">

            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <!-- Syncfusion ASP.NET MVC Script Manager -->
    @Html.EJS().ScriptManager()

</body>
</html>
